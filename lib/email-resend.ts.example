/**
 * Envia e-mail de valida√ß√£o usando Resend
 * 
 * Vantagens sobre Gmail SMTP:
 * - 3-5x mais r√°pido (1-3 segundos vs 5-15 segundos)
 * - 99.9% de deliverability
 * - N√£o cai em spam
 * - Gr√°tis at√© 3.000 e-mails/m√™s
 * - Analytics e tracking inclu√≠dos
 * 
 * @param to - E-mail do destinat√°rio
 * @param verificationLink - Link de verifica√ß√£o gerado pelo Firebase
 */
export async function sendVerificationEmail(
  to: string,
  verificationLink: string
): Promise<void> {
  try {
    const emailHtml = getVerificationEmailTemplate(verificationLink)

    const { data, error } = await resend.emails.send({
      from: 'SintoniaMed <noreply@seudominio.com>', // Use seu dom√≠nio verificado
      to,
      subject: 'Valide seu E-mail - SintoniaMed',
      html: emailHtml,
      // Opcionalmente, adicionar tags para analytics
      tags: [
        { name: 'category', value: 'verification' },
        { name: 'environment', value: process.env.NODE_ENV || 'development' },
      ],
    })

    if (error) {
      throw error
    }

    console.log('‚úÖ E-mail de valida√ß√£o enviado com sucesso via Resend:', data?.id)
  } catch (error: any) {
    console.error('‚ùå Erro ao enviar e-mail de valida√ß√£o:', error)
    throw error
  }
}

